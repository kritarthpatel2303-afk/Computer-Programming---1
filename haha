#include<stdio.h>
#include<string.h>
void printstr(char s[]);
int main()
{
   char str [50];
   printf("Enter a string: ");
   gets(str);
   void printstr(char[]);
   printstr(str);
   return 0;
}
void printstr(char s[])
{
    char *ptr = s;
    while(*ptr != '\0')
    {   if (*ptr >= 'a' && *ptr <= 'z')
        printf("%c ", *ptr - 32);
       else
        printf("%c ", *ptr);
        ptr++;

    }
    printf ("\n length of the string is %d.\n",ptr-s);
}
